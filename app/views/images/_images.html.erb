<div class="content-wrapper hide-until-loading">
  <div class="pad_b0 pad_u0 body-wrapper">
    
    <!-- header image -->
    <div class="section-content no-padding">
      <div class="container">
        <div class="row">
          <div class="col-md-12 col-sm-12 no-bottom-margin animated" data-animtype="fadeInUp"
            data-animrepeat="0"
            data-animspeed="1s"
            data-animdelay="0.7s">
            <!-- <h2 class="h2-section-title">Today's</h2> -->
              <div class="space-sep40"></div>
              <h3 class="h3-section-info">
              An online visual playground for photography enthusiasts to compete, learn and promote great photography to a global audience
              </h3>
              <div class="space-sep40"></div>
            </div>
          </div>
        </div>
      </div>
      <!-- header image end -->
      
      <div class="bg section-content section-tabs section-px stones-bg white-text">
        <div class="tab-container">
          <div class="container">
            <div class="tab-content">
              <div id="tabc1">
                <% if @images.empty? %>
                no image foudn...!!
                <% else %>
                <% @images.in_groups_of(4).each do |image_row| %>
                <div class="row">
                  <% image_row.each do |image| %>
                  <% unless image.nil? %>
                  <div class="pad_3 col-md-3 col-sm-3">
                    <div class="feature animated" data-animtype="fadeInUp" data-animrepeat="0" data-animspeed="1s" data-animdelay="0.4s">
                      <a href="<%= image_path(image) %>" title="<%= image.name %>">
                        <div class=" img-overlay">
                          <img src="<%= image.photo.url(:medium) %>" alt="<%= image.name %>">
                          <% if Image.top_10.include? image.id %>
                          <%= image_tag 'star-7-40.png', class: "top-featured" %>
                          <% end %>
                          <!-- <div class="item-img-overlay"> -->
                          
                          <!-- </div> -->
                        </div>
                      </a>
                      <div id ="bg" id ="bg" class="feature-content">
                        <h3 id="cl" id="cl" class="mar_b h3-body-title blog-title">
                        <a href="#"><%= image.name %></a>
                        </h3>
                        <p class="mar_b0"><%= link_to "#{image.user.profile.fullname}", account_path(image.user) %></p>
                      </div>
                      <div class="feature-details">
                        <a href="<%= image_upvote_path(image) %>"><%= image_tag 'plus-32.png', style: 'width:25px' %></a>
                        <a href="<%= image_downvote_path(image) %>"><%= image_tag 'minus-32.png', style: 'width:25px'%></a>
                        <%= image.cached_weighted_score %> points
                        <span class="details-seperator"></span>
                        <a href="#"><i class="icon-comment"></i><span class="blk"><%= image.comment_threads.size %></span></a>
                      </div>
                    </div>
                  </div>
                  <% end %>
                  <% end %>
                </div>
                <div class="space-sep40"></div>
                <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>