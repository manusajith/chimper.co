<div class="content-wrapper hide-until-loading">
  <div class="pad_b0 pad_u0 body-wrapper">

<!-- profile section -->
    <div class="section-content ">                        
       <div class="container">
         <div class="row ">
            <div class="col-md-12 col-sm-12 no-bottom-margin">
                <div class="panel">

            <div class="sppad col-xs-12 col-md-3">
                <center>
                    <%= gravatar @user %>
                </center>
            </div>
            <div class="col-xs-12 col-md-9">
                <div class="special">
                    <div class="mic-info">
                        <h3 class="prof"><%= @user.profile.fullname %></h3>
                        <p class="par-nb"><small>First Cry</small><%= @user.profile.dob%></p>
                        <p class="par-nb"><small>About</small><%= @user.profile.bio %></p>
                    </div>
                </div>
    
                <div id="clrbk" class="m-tp feature-details">
                        <span class="special">
                            <span class="mic-info">                                                    
                                    <i class="par-nb"><small>Joined on</small><%= @user.created_at.to_s(:short) %></i>                                        
                            </span>
                        </span>
                        <span class="details-seperator"></span>
                        <span class="special">
                            <span class="mic-info">                                                    
                                    <i class="par-nb"><small>Phots Uploaded</small><%= @user.images.count %></i>                                        
                            </span>
                        </span>                                                                            
                    </div>                               
                </div>                       
            </div>                                                                            
        </div>
    </div>        
</div>
</div>
<!-- end of profile section -->
 
    <div class="bg section-content section-tabs section-px stones-bg white-text">
      <div class="tab-container">                            
        <div class="container">
          <div class="tab-content">
            <div id="tabc1">
              <% if @images.empty? %>
                no image found...!!
              <% else %>
                <% @images.in_groups_of(4).each do |image_row| %>
                  <div class="row">
                    <% image_row.each do |image| %>
                      <% unless image.nil? %>
                        <div class="pad_3 col-md-3 col-sm-3">
                          <div class="feature animated" data-animtype="fadeInUp" data-animrepeat="0" data-animspeed="1s" data-animdelay="0.4s">
                            <div class=" img-overlay">
                              <img src="<%= image.photo.url(:medium) %>" alt="Blog">
                              <div class="item-img-overlay">
                                <a class="portfolio-zoom fa fa-plus" href="<%= image_path(image) %>" title="<%= image.name %>"></a>
                              </div>
                            </div>
                            <div id ="bg" id ="bg" class="feature-content">
                              <h3 id="cl" id="cl" class="mar_b h3-body-title blog-title">
                                <a href="#"><%= image.name %></a>
                              </h3>
                              <p class="mar_b0"><%= link_to "#{image.user.profile.fullname}", account_path(image.user) %></p>
                            </div>
                            <div class="feature-details">
                              <i class="icon-calendar"></i>
                              <span><%= image.created_at.to_s(:short) %></span>
                              <span class="details-seperator"></span>
                              <a href="<%= image_upvote_path(image) %>"><i class="fa fa-thumbs-up"></i><span><%= image.get_upvotes.size %></span></a>
                              <a href="<%= image_downvote_path(image) %>"><i class="fa fa-thumbs-down"></i><span><%= image.get_downvotes.size %></span></a>
                              <a href="#"><i class="icon-comment"></i><span><%= image.comment_threads.size %></span></a>
                            </div>        
                          </div>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="space-sep40"></div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>