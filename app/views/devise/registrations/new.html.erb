<div class="section-content no-padding">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12 animated flipInY animatedVisi" data-animtype="flipInY" data-animrepeat="0" data-speed="1s" data-delay="0.5s">
        <h2 class="h2-section-title">Sign Up</h2>
        <div class="i-section-title">
          <i class="icon-users-outline">
          </i>
        </div>
        <div class="space-sep20"></div>
      </div>
    </div>
    <div class="row">

                            <div class="col-md-6 col-sm-6 centered">
                                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'classic-form') do |f| %>
                                      <%= devise_error_messages! %>
                                      <% resource.build_profile %>
                                       <div class="form-group">
                                        <label for="email" class="col-sm-3 control-label">Email</label>
                                        <div class="col-sm-9">
                                          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                                        </div>
                                      </div>

                                      <%= f.fields_for :profile do |detail| %>
                                        <div class="form-group">
                                          <label for="name" class="col-sm-3 control-label">First Name</label>
                                          <div class="col-sm-9">
                                            <%= detail.text_field :first_name, class: 'form-control' %>
                                          </div>
                                        </div>

                                        <div class="form-group">
                                          <label for="name" class="col-sm-3 control-label">Last Name</label>
                                          <div class="col-sm-9">
                                            <%= detail.text_field :last_name, class: 'form-control' %>
                                          </div>
                                        </div>

                                        <div class="form-group">
                                          <label for="name" class="col-sm-3 control-label">Date of Birth</label>
                                          <div class="col-sm-9">
                                            <%= detail.text_field :dob, class: 'form-control datepicker' %>
                                          </div>
                                        </div>

                                        <div class="form-group">
                                          <label for="name" class="col-sm-3 control-label">Website</label>
                                          <div class="col-sm-9">
                                            <%= detail.text_field :website, class: 'form-control' %>
                                          </div>
                                        </div>
                                        <div class="form-group">
                                          <label for="name" class="col-sm-3 control-label">Bio</label>
                                          <div class="col-sm-9">
                                            <%= detail.text_area :bio, row: '1', class: 'form-control-txtarea' %>
                                          </div>
                                        </div>
                                                      <br><br>

                                      <% end %>

                                      <div class="form-group">
                                        <label for="password" class="col-sm-3 control-label">Password</label>
                                        <div class="col-sm-9">
                                          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                                        </div>
                                      </div>

                                      <div class="form-group">
                                        <label for="password" class="col-sm-3 control-label">Password</label>
                                        <div class="col-sm-9">
                                          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
                                        </div>
                                      </div>


                                        <div class="form-group">
                                            <div class="col-sm-offset-3 col-sm-9">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox"> I Accept All The <a href="#" class="skin-text">Terms And Services</a>.

                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-offset-3 col-sm-9">
                                                <button type="submit" class="btn btn-block btn-primary">Sign Up</button>
                                            </div>
                                        </div>

                                   <% end %>                  
                                </div>
                            </div></div>

    </div>
  </div>
</div>

